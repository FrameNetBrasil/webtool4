/*******************************
    Fomantic UI Site Variables
    Updated with Design System Integration
*******************************/

@imagePath: "/scripts/fomantic-ui/assets/images";
@fontPath: "/scripts/fomantic-ui/assets/fonts";

/*-------------------
      Base Sizes
--------------------*/

@emSize: 14px;
@fontSize: 14px;

/*-------------------
       Fonts
--------------------*/

@importGoogleFonts: false;
@fontName: 'Inter';
@fallbackFonts: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
@pageFont: @fontName, @fallbackFonts;
@headerFont: @fontName, @fallbackFonts;
@fontSmoothing: antialiased;
@lineHeight: 1.5;

/*-------------------
    Border Radius
--------------------*/
@borderRadius: 6px;               // Modern, subtle radius
@relativeBorderRadius: 0.375rem;
@absoluteBorderRadius: 0.375rem;
@defaultBorderRadius: @absoluteBorderRadius;

/*-------------------
     Brand Colors
--------------------*/

@primaryColor: #5E6AD2;
@secondaryColor: #4B5563;

/*-------------------
      Site Colors
--------------------*/

/* Your custom color palette */
@customPrimary: #5E6AD2;
@customPrimaryHover: #4C51BF;
@customPrimaryDark: #3730A3;

/* Base colors - matching your design system */
@red: #EF4444;
@orange: #F59E0B;
@yellow: #F59E0B;
@olive: #84CC16;
@green: #10B981;
@teal: #14B8A6;
@blue: #3B82F6;
@violet: #6366F1;
@purple: #8B5CF6;
@pink: #EC4899;
@brown: #92400E;
@grey: #6B7280;
@black: #111827;

/* Light colors */
@lightRed: #FEE2E2;
@lightOrange: #FEF3C7;
@lightYellow: #FEF3C7;
@lightOlive: #D9F99D;
@lightGreen: #D1FAE5;
@lightTeal: #CCFBF1;
@lightBlue: #DBEAFE;
@lightViolet: #E0E7FF;
@lightPurple: #EDE9FE;
@lightPink: #FCE7F3;
@lightBrown: #FEF3C7;
@lightGrey: #F3F4F6;
@lightBlack: #374151;

/* Neutrals - matching your gray scale */
@fullBlack: #000000;
@offWhite: #F9FAFB;
@darkWhite: #F3F4F6;
@midWhite: #E5E7EB;
@white: #FFFFFF;

/*-------------------
    Alpha Colors
--------------------*/

@subtleTransparentBlack: rgba(0, 0, 0, 0.02);
@transparentBlack: rgba(0, 0, 0, 0.05);
@strongTransparentBlack: rgba(0, 0, 0, 0.10);
@veryStrongTransparentBlack: rgba(0, 0, 0, 0.15);

@subtleTransparentWhite: rgba(255, 255, 255, 0.02);
@transparentWhite: rgba(255, 255, 255, 0.08);
@strongTransparentWhite: rgba(255, 255, 255, 0.15);

/*-------------------
    Emotive Colors
--------------------*/

/* Positive - Success */
@positiveColor: #10B981;
@positiveBackgroundColor: #D1FAE5;
@positiveBorderColor: #10B981;
@positiveHeaderColor: #065F46;
@positiveTextColor: #065F46;

/* Negative - Error */
@negativeColor: #EF4444;
@negativeBackgroundColor: #FEE2E2;
@negativeBorderColor: #EF4444;
@negativeHeaderColor: #991B1B;
@negativeTextColor: #991B1B;

/* Info */
@infoColor: #3B82F6;
@infoBackgroundColor: #DBEAFE;
@infoBorderColor: #3B82F6;
@infoHeaderColor: #1E40AF;
@infoTextColor: #1E40AF;

/* Warning */
@warningColor: #F59E0B;
@warningBorderColor: #F59E0B;
@warningBackgroundColor: #FEF3C7;
@warningHeaderColor: #92400E;
@warningTextColor: #92400E;

/*-------------------
        Page
--------------------*/

@pageBackground: #FAFBFC;         // Soft, warm white
@pageOverflowX: hidden;
@lineHeight: 1.5;
@textColor: #1F2937;

/*-------------------
      Paragraph
--------------------*/

@paragraphMargin: 0 0 1em;
@paragraphLineHeight: 1.5;

/*-------------------
       Links
--------------------*/

@linkColor: #5E6AD2;
@linkUnderline: none;
@linkHoverColor: #4C51BF;
