/*-------------------
     Transitions
--------------------*/

@defaultDuration: 0.2s;
@defaultEasing: ease;

/*-------------------
     Breakpoints
--------------------*/

@mobileBreakpoint: 320px;
@tabletBreakpoint: 768px;
@computerBreakpoint: 992px;
@largeMonitorBreakpoint: 1200px;
@widescreenMonitorBreakpoint: 1920px;

/*-------------------
      Form Input
--------------------*/

@inputBackground: #FFFFFF;
@inputVerticalPadding: 0.75rem;
@inputHorizontalPadding: 1rem;
@inputPadding: @inputVerticalPadding @inputHorizontalPadding;

/* Input Text Color */
@inputColor: #1F2937;
@inputPlaceholderColor: #9CA3AF;
@inputPlaceholderFocusColor: #6B7280;

/* Line Height */
@inputLineHeight: 1.5;

/*-------------------
    Focused Input
--------------------*/

@focusedFormBorderColor: #5E6AD2;
@focusedFormMutedBorderColor: #C7D2FE;

/*-------------------
      Box Shadow
--------------------*/

@subtleShadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
@floatingShadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
@floatingShadowHover: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);

/*-------------------
   Colored Borders
--------------------*/

@primaryBorderColor: #5E6AD2;
@secondaryBorderColor: #6B7280;
@redBorderColor: #EF4444;
@orangeBorderColor: #F59E0B;
@yellowBorderColor: #F59E0B;
@oliveBorderColor: #84CC16;
@greenBorderColor: #10B981;
@tealBorderColor: #14B8A6;
@blueBorderColor: #3B82F6;
@violetBorderColor: #6366F1;
@purpleBorderColor: #8B5CF6;
@pinkBorderColor: #EC4899;
@brownBorderColor: #92400E;
@greyBorderColor: #6B7280;
@blackBorderColor: #111827;

/*-------------------
      Gradients
--------------------*/

@primaryGradient: linear-gradient(135deg, #5E6AD2, #4C51BF);
@successGradient: linear-gradient(90deg, #10B981, #059669);
@warningGradient: linear-gradient(90deg, #F59E0B, #D97706);
@errorGradient: linear-gradient(90deg, #EF4444, #DC2626);

