/*-------------------
    Scroll Bars
--------------------*/

@useCustomScrollbars: true;
@customScrollbarWidth: 8px;
@customScrollbarHeight: 8px;
@trackBackground: #F3F4F6;
@trackBorderRadius: 4px;
@thumbBorderRadius: 4px;
@thumbBackground: #D1D5DB;
@thumbTransition: background 0.2s ease;
@thumbInactiveBackground: #E5E7EB;
