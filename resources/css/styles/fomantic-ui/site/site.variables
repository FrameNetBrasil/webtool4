/*-------------------
  Highlighted Text
--------------------*/

@highlightBackground: #FEF3C7;
@highlightColor: #92400E;

/*-------------------
     Neutral Text
--------------------*/

@darkTextColor: #111827;
@mutedTextColor: #6B7280;
@lightTextColor: #9CA3AF;
@unselectedTextColor: #9CA3AF;
@hoveredTextColor: #374151;
@pressedTextColor: #1F2937;
@selectedTextColor: #111827;

@invertedTextColor: #FFFFFF;
@invertedMutedTextColor: #F3F4F6;
@invertedLightTextColor: #E5E7EB;
@invertedUnselectedTextColor: #D1D5DB;
@invertedHoveredTextColor: #FFFFFF;
