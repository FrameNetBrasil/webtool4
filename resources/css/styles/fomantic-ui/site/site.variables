/*-------------------
  Colored Headers
--------------------*/

@primaryHeaderColor: #3730A3;
@secondaryHeaderColor: #374151;
@redHeaderColor: #991B1B;
@orangeHeaderColor: #92400E;
@yellowHeaderColor: #92400E;
@oliveHeaderColor: #065F46;
@greenHeaderColor: #065F46;
@tealHeaderColor: #0F766E;
@blueHeaderColor: #1E40AF;
@violetHeaderColor: #4338CA;
@purpleHeaderColor: #6B21A8;
@pinkHeaderColor: #BE185D;
@brownHeaderColor: #92400E;
