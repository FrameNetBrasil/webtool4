@secondaryBackground: #F3F4F6;
@redBackground: #FEE2E2;
@orangeBackground: #FEF3C7;
@yellowBackground: #FEF3C7;
@oliveBackground: #D1FAE5;
@greenBackground: #D1FAE5;
@tealBackground: #CCFBF1;
@blueBackground: #DBEAFE;
@violetBackground: #E0E7FF;
@purpleBackground: #EDE9FE;
@pinkBackground: #FCE7F3;
@brownBackground: #FEF3C7;
@greyBackground: #F3F4F6;
